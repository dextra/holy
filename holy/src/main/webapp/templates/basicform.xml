<engine>
	<action selector="#content">
		<h3>
			Form
		</h3>
		<div class="tabPanel">
			<ul>
				<li>
					<a>Demo</a>
				</li>
				<li>
					<a>Script</a>
				</li>
				<li>
					<a>HTML</a>
				</li>
			</ul>
			<div class="demo">
					<form class="myForm">
						<fieldset>
							<legend>Register</legend>
							<ul>
								<li class="require">
									<label for="name">Name:</label>
									<input type="text" />
								</li>
								<li class="require">
									<label for="pass">Password:</label>
									<input type="password" />
								</li>
								<li class="require">
									<label for="email">Email:</label>
									<input type="text" />
								</li>
								<li>
									<label for="phone">Phone:</label>
									<input type="text" />
								</li>
								<li>
									<label for="birthdate">Birthdate:</label>
									<input class="date" type="text" />
								</li>
								<li>
									<label>Sex:</label>
									Male:
									<input class="male" type="radio" />
									Female:
									<input class="female" type="radio" />
								</li>
							</ul>
						</fieldset>
					</form>
			</div>
			<div class="script">
				<pre>
					$('.forms').form();
					$('.forms input.date').simpleDatepicker();
				</pre>
			</div>
			<div class="html">
				<pre></pre>
			</div>
		</div>
	</action>
	<script>
		<![CDATA[
		$('.html pre').text($('.demo').html());
		$('.html pre').snippet('html', {style:"the",showNum:false});
		$('.script pre').snippet('javascript', {style:"the",showNum:false});
		$(".tabPanel").tabPanel();

		$('.myForm').form();
		$('.myForm input.date').simpleDatepicker();
		]]>
	</script>
</engine>

