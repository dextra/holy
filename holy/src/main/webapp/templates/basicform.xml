<engine>
	<action selector="#content">
		<h3>
			Basic
			<span>Form</span>
		</h3>
		<div class="tabPanel">
			<ul>
				<li>
					<a>Demo</a>
				</li>
				<li>
					<a>Script</a>
				</li>
				<li>
					<a>HTML</a>
				</li>
			</ul>
			<div class="demo">
				<form class="myForm liquidForm">
					<fieldset>
						<legend>Register</legend>
						<ul>
							<li class="require">
								<label for="name">Name:</label>
								<input type="text" title="Enter your first name." />
							</li>
							<li>
								<label for="name">Second name:</label>
								<input type="text" title="Enter your second name." />
							</li>
							<li class="require">
								<label for="pass">Password:</label>
								<input type="password" title="Enter password." />
							</li>
							<li class="require">
								<label for="email">Email:</label>
								<input type="text" title="Enter your e-mail address." />
							</li>
							<li>
								<label for="phone">Phone:</label>
								<input type="text" title="Enter your phone number." />
							</li>
							<li>
								<label for="birthdate">Birthdate:</label>
								<input class="date" type="text" title="Enter your birthdate." />
							</li>
							<li>
								<label>Sex:</label>
								<input class="male" type="radio" />
								Male
								<input class="female" type="radio" />
								Female
							</li>
							<li class="buttons">
								<button type="submit" class="btSave">button</button>
								<a href="#datatable" class="btCancel">link</a>
								<input type="submit" value="input" class="btRemove" />
							</li>
						</ul>
					</fieldset>
				</form>
			</div>
			<div class="script">
				<pre>$('.forms').form();
					$('.forms input.date').simpleDatepicker();</pre>
			</div>
			<div class="html">
				<pre></pre>
			</div>
		</div>
	</action>
	<script>
		<![CDATA[
		$('.html pre').text($('.demo').html());
		$('.html pre').snippet('html', {style:"ide-eclipse",showNum:false});
		$('.script pre').snippet('javascript', {style:"ide-eclipse",showNum:false});
		$(".tabPanel").tabPanel();

		$('.myForm').form();
		$('.myForm [title]').tipsy({trigger: 'focus', gravity: 'w', fade: true});
		$('.myForm input.date').simpleDatepicker();
		]]>
	</script>
</engine>

