<engine>
	<action selector="#content">
		<h3>
			Basic
			<span>Form</span>
		</h3>
		<div class="tabPanel">
			<ul>
				<li>
					<a>Demo</a>
				</li>
				<li>
					<a>Script</a>
				</li>
				<li>
					<a>HTML</a>
				</li>
			</ul>
			<div class="demo">
				<form class="myForm">
					<fieldset>
						<legend>Register</legend>
						<ul>
							<li class="require">
								<label for="name">Name:</label>
								<input type="text" /> <a href="#!" title="Enter your first name.">(?)</a>
							</li>
							<li class="require">
								<label for="pass">Password:</label>
								<input type="password" /> <a href="#!" title="Enter password.">(?)</a>
							</li>
							<li class="require">
								<label for="email">Email:</label>
								<input type="text" /> <a href="#!" title="Enter your e-mail address.">(?)</a>
							</li>
							<li>
								<label for="phone">Phone:</label>
								<input type="text" /> <a href="#!" title="Enter your phone number.">(?)</a>
							</li>
							<li>
								<label for="birthdate">Birthdate:</label>
								<input class="date" type="text" /> <a href="#!" title="Enter your birthdate.">(?)</a>
							</li>
							<li>
								<label>Sex:</label>
								<input class="male" type="radio" />
								Male
								<input class="female" type="radio" />
								Female
							</li>
							<li>
								<ul class="buttons">
									<li class="btSave">
										<button type="submit">button</button>
									</li>
									<li class="btCancel">
										<a href="#datatable">link</a>
									</li>
									<li class="btRemove">
										<input type="submit" value="input" />
									</li>
								</ul>
							</li>
						</ul>
					</fieldset>
				</form>
			</div>
			<div class="script">
				<pre>$('.forms').form();
					$('.forms input.date').simpleDatepicker();</pre>
			</div>
			<div class="html">
				<pre></pre>
			</div>
		</div>
	</action>
	<script>
		<![CDATA[
		$('.html pre').text($('.demo').html());
		$('.html pre').snippet('html', {style:"ide-eclipse",showNum:false});
		$('.script pre').snippet('javascript', {style:"ide-eclipse",showNum:false});
		$(".tabPanel").tabPanel();

		$('.myForm').form();
		$('.myForm a').tipsy();
		$('.myForm input.date').simpleDatepicker();
		]]>
	</script>
</engine>

