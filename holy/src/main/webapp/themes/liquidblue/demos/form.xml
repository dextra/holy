<engine>
	<action selector="#content">
		<div class="forms">
			<form>
				<fieldset>
					<legend>Register</legend>
					<ul>
						<li class="require">
							<label for="name"> Name:</label>
							<input type="text" />
						</li>
						<li class="require">
							<label for="pass"> Password:</label>
							<input type="password" />
						</li>
						<li class="require">
							<label for="email"> Email:</label>
							<input type="text" />
						</li>
						<li>
							<label for="phone"> Phone:</label>
							<input type="text" />
						</li>
						<li>
							<label for="birthdate"> Birthdate:</label>
							<input class="date" type="text" />
						</li>
						<li>
							<label>Sex:</label>
							Male:
							<input class="male" type="radio" />
							Female:
							<input class="female" type="radio" />
						</li>
					</ul>
				</fieldset>
			</form>
		</div>
	</action>
	
	<script><![CDATA[
		$('#content .forms').form();
		$('#content .forms input.date').simpleDatepicker();
	]]></script>
</engine>
