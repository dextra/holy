<engine>
	<action selector="#content">
		<h3>Dialog</h3>
		<div class="tabPanel">
			<ul>
				<li>
					<a href="#">Demo</a>
				</li>
				<li>
					<a href="#">Options</a>
				</li>
				<li>
					<a href="#">Script</a>
				</li>
				<li>
					<a href="#">HTML</a>
				</li>
				<li>
					<a href="#">Download</a>
				</li>
			</ul>
			<div class="demo">
				<div class="myDialog">
					<h3>
						Dialog
						<span>Exemple</span>
					</h3>
					<form class="myForm">
						<fieldset>
							<legend>Register</legend>
							<ul>
								<li class="require">
									<label for="name">Name:</label>
									<input type="text" title="Enter your first name." />
								</li>
								<li class="require">
									<label for="pass">Password:</label>
									<input type="password" title="Enter password." />
								</li>
								<li class="require">
									<label for="email">Email:</label>
									<input type="text" title="Enter your e-mail address." />
								</li>
								<li>
									<label for="phone">Phone:</label>
									<input type="text" title="Enter your phone number." />
								</li>
								<li>
									<label for="birthdate">Birthdate:</label>
									<input class="date" type="text" title="Enter your birthdate." />
								</li>
								<li>
									<label>Sex:</label>
									<input class="male" type="radio" />
									Male
									<input class="female" type="radio" />
									Female
								</li>
								<li class="buttons">
									<button type="submit" class="btSave">Save</button>
									<button type="button" class="btCancel">Cancel</button>
								</li>
							</ul>
						</fieldset>
					</form>
					<div class="another">
						<h1>Ha!</h1>
					</div>
				</div>
				<div class="buttons">
					<button type="submit" class="showDialog btHelp">Show Dialog</button>
				</div>
			</div>
			<div class="options">
				<p>
					<strong>overlay:</strong> none or hex color #000000
					<span>(default: none)</span>
				</p>
				<p>
					<strong>alpha:</strong> 1 to 10
					<span>(default: 5)</span>
				</p>
				<p>
					<strong>width:</strong> auto or px
					<span>(default: auto)</span>
				</p>
				<br />
				<p>See the script tab to view example.</p>
			</div>
			<div class="script">
				<pre>$(".btDialogMe").click(function() {
					$(".myDialog").xdialog({
					overlay: '#23557E',
					alpha: '3'
					});
					});
					// close dialog
					$('form .btCancel').click(function() {
					$('.myDialog').xundialog();
					});</pre>
			</div>
			<div class="html">
				<pre></pre>
			</div>
			<div class="download">
				<div class="buttons">
					<a class="btDownload" target="_blank" title="Clique here to download JavaScript file." href="holy/dialog/jquery.dialog.js">jquery.dialog.js</a>
					<a class="btDownload" target="_blank" title="Clique here to download CSS file." href="holy/dialog/jquery.dialog.css">jquery.dialog.css</a>
				</div>
			</div>
		</div>
	</action>
	<script>
		<![CDATA[
		$('.html pre').text($('.demo').html());
		$('.html pre').snippet('html', {style:"ide-eclipse",showNum:false});
		$('.script pre').snippet('javascript', {style:"ide-eclipse",showNum:false});
		$(".tabPanel").tabPanel();
		$('.myForm').form();
		$('.myForm [title]').tipsy({trigger: 'focus', gravity: 's', fade: true});
		$('.myDialog, .another').hide();
		$(".showDialog").click(function() {
		$(".myDialog").xdialog({
		overlay: '#23557E',
		alpha: '3'
		});
		});
		$('form').submit(function() {
		$('.another').xdialog({
		overlay: '#000',
		overlayClick: true
		});
		return false;
		});
		$('form .btCancel').click(function() {
		$('.myDialog').xundialog();
		});
		]]>
	</script>
</engine>
